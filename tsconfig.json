{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./*"]
    },
    "types": [
      "next",
      "node"
    ],
    // REMOVE typeRoots unless you have custom .d.ts files you want to include
    // "typeRoots": [
    //   "./node_modules/@types"
    // ],
    "allowJs": true,
    "incremental": true,
    "plugins": [
      { "name": "next" }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
    // Do NOT include "src/types/**/*.d.ts" unless you have custom global types
  ],
  "exclude": [
    "node_modules"
  ]
}